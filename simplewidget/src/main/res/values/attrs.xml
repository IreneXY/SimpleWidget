<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SimpleProgressBar">
        <attr name="spb_background_color" format="color" />
        <attr name="spb_foreground_color" format="color" />
        <attr name="spb_progress" format="float" />
        <attr name="spb_corner" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SimpleSeekBar">
        <attr name="ssb_background_height" format="dimension"/>
        <attr name="ssb_foreground_height" format="dimension"/>
        <attr name="ssb_background_color" format="color"/>
        <attr name="ssb_foreground_color" format="color"/>
        <attr name="ssb_thumb_color" format="color"/>
        <attr name="ssb_progress" format="float"/>
    </declare-styleable>

</resources>