<resources>

    <declare-styleable name="SimpleProgressBar">
        <attr name="spb_background_color" format="color" />
        <attr name="spb_foreground_color" format="color" />
        <attr name="spb_progress" format="float" />
        <attr name="spb_corner" format="dimension" />
        <attr name="spb_shadow_color" format="color"/>
        <attr name="spb_shadow_border_width" format="dimension"/>
        <attr name="spb_shadow_corner" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SimpleButton">
        <attr name="sb_text" format="string"/>
        <attr name="sb_text_appearance" format="reference" />
        <attr name="sb_corner" format="dimension" />
        <attr name="sb_icon" format="reference"/>
        <attr name="sb_icon_size" format="dimension"/>
        <attr name="sb_icon_tint" format="color" />
        <attr name="sp_icon_text_gap" format="dimension"/>
    </declare-styleable>

</resources>